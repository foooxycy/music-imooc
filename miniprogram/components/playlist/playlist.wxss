.playlist-playcount{
    font-size: 24rpx;
    color: #fff;
    text-shadow: 1px 0 0 rgba(0,0,0,1);
    position: absolute;
    right: 10rpx;
    padding-left: 16px;
    background: url("data:image/png;base64,") no-repeat 0 2px;
    background-size: 14px auto;
}
.playlist-name{
    font-size: 26rpx;
    line-height: 1.2;
    padding: 2px 0 0 6px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}
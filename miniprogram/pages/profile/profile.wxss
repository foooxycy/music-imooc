page{
    background-color: #f1f1f1;
}
.profile-header{
    background-size: cover;
    height: 480rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0 0 0,0.3);
    background-image: linear-gradient(to bottom,#d43c43 20%,tomato);
}
.avatar-url{
    width: 200rpx;
    height: 200rpx;
    display: block;
    overflow: hidden;
    border: 6rpx solid #fff;
    border-radius: 50%;
}
.nav{
    margin: 40rpx;
    background-color: #fff;
    box-shadow: 0px 0px 5px 4px #fff;
}
.nav-item{
    line-height: 100rpx;
}
.iconfont{
    font-size: 50rpx;
    margin-left:30rpx;
    line-height: 80rpx;
    color: #d43c43;
}
.text{
    margin: 0 300rpx 0 30rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    color: #666;
}